<!--
	This file contains some path to sprites, music and level files.
	You can change the path or the name of each file if you want to use
	any other sprite.
-->
<TX_asset>
	<Image path="./image/">
		<!-- The two sprites of the player -->
		<Player>
			<Sprite filename="player.png" />
			<Sprite filename="playerSH.png" />
		</Player>
		<!-- Items collected by the player in game -->
		<Item>
			<Sprite filename="itemH.png" />
			<Sprite filename="itemSH.png" />
			<Sprite filename="itemR.png" />
			<Sprite filename="itemB.png" />
			<Sprite filename="itemL.png" />
			<Sprite filename="itemScore.png" />
		</Item>
		<!-- Missiles for the player and for enemies -->
		<Missile>
			<!-- Player missiles -->
			<Sprite filename="shot.png" />
			<Sprite filename="missile.png" />
			<Sprite filename="bomb.png" />
			<Sprite filename="laser.png" />
			<Sprite filename="light_bullet.png" />
			<!-- Enemy missiles -->
			<Sprite filename="light_bullet_shot.png" />
			<Sprite filename="shot.png" />
			<Sprite filename="" />
			<Sprite filename="" />
			<Sprite filename="red_bullet.png" />
			<Sprite filename="" />
		</Missile>
		<!-- Sprites of the enemies -->
		<Enemy>
			<Unit id="0" filename="boss00_sprite.png" />
			<Unit id="1" filename="boss01_sprite.png" />
			<!-- For debug -->
			<Unit id="23" filename="watcher.png" />
			<!-- End debug -->
			<Unit id="50" filename="boss00_sprite.png" />
			<Unit id="100" filename="wenemy.png" />
			<Unit id="101" filename="enemy.png" />
			<Unit id="102" filename="watcher.png" />
			<Unit id="103" filename="bachi.png" />
		</Enemy>
		<Explosion>
			<Sprite filename="explosion_sp.png" />
			<!-- Smoke (for particles) -->
			<Sprite filename="smoke.png" />
		</Explosion>
		<Background>
			<Unit filename="level00-bgd.png" />
			<Unit filename="level01-bgd.png" />
		</Background>
	</Image>
	<!-- Level Musics -->
	<Music path="./audio/">
		<Unit level="0" filename="00.ogg" />
		<Unit level="1" filename="01.ogg" />
		<Unit level="2" filename="01.ogg" />
		<!-- Victory music -->
		<Unit level="" filename="victory-C.ogg" />
		<Unit level="" filename="victory-B.ogg" />
		<Unit level="" filename="victory-A.ogg" />
	</Music>
	<Sound path="./audio/">
		<!-- Basic shot -->
		<Unit filename="longshot.wav" />
		<!-- Rocket -->
		<Unit filename="rocket.wav" />
		<!-- laser -->
		<Unit filename="playerlaser.wav" />
		<!-- Explosion -->
		<Unit filename="explosion.wav" />
		<!-- Watch out! A boos is coming -->
		<Unit filename="alarm.wav" />
	</Sound>
	<!-- Level data -->
	<Level path="./data/">
		<Unit id="0" filename="00.targetx" />
		<Unit id="1" filename="01.targetx" />
		<Unit id="2" filename="02.targetx" />
	</Level>
</TX_asset>
